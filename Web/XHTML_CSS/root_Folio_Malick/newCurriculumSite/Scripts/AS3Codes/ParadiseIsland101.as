package Scripts.AS3Codes {		// ******** HOW IT WORKS ****************	// In the middle of the movie "MaskMaker105", this class will inserted,	// It has a slide show and fires and typewriter effect imported from classes "SlogansB, C, D".		import flash.display.MovieClip;	import flash.display.Sprite;	import flash.utils.Timer;	import flash.events.TimerEvent;	import flash.events.MouseEvent;		public class ParadiseIsland101 extends MovieClip {		// Create a Master Mask		private var _masterMask:Sprite;		// Instantiate the blue Background which resides in the main FLA		private var _background:Background;		// Create an instance of the Square graphic used as a mask, it resides in the library of the main FLA;		private var samaBoite:Boite;		// Create instances of the pictures		private var _plage1:Plage1;		private var _plage2:Plage2;		private var _airline:Airline;				// INSTANTIATE THE IMPORTED SLOGAN CLASSES WHICH CONTAIN THE TYPEWRITER EFFECT; 		// IN ORDER TO BE ACCESSED BY OTHER CLASSES, THESE CLASSES NEED TO HAVE PUBLIC ATTRIBUTES;		public var _slogan2:SlogansB;		public var _slogan3:SlogansC;		public var _slogan4:SlogansD;				// Set x and y Positions of the mask objects for the image "plage1";		private var _PosY1:Number = 50;		private var _PosX1:Number = 50;		private var _PosY2:Number = 252;		private var _PosX2:Number = 151;		private var _PosY3:Number = 50;		private var _PosX3:Number = 252;		private var _PosY4:Number = 252;		private var _PosX4:Number = 353;				// Set x and y Positions of the mask objects for the image "plage3";		var _NewY1:Number = 50;		var _NewX1:Number = 50;		var _NewY2:Number = 252;		var _NewX2:Number = 151;		var _NewY3:Number = 50;		var _NewX3:Number = 252;		var _NewY4:Number = 252;		var _NewX4:Number = 353;				// TIMERS		private var masterTimer:Timer = new Timer(8000, 1);		private var beachTimer:Timer = new Timer(60);		private var airplaneTimer:Timer = new Timer(100);		private var endTimer:Timer = new Timer(3000, 1);				public function ParadiseIsland101() {			// Instantiate the background graphic			_background = new Background();			addChild(_background);						// Instantiate the Master Mask			_masterMask = new Sprite();			addChild(_masterMask);						// Instantiate the first image			_plage1 = new Plage1;			addChild(_plage1);			_plage1.x = 0;			_plage1.y = 0;						_plage1.mask = _masterMask;						beachTimer.addEventListener(TimerEvent.TIMER, beachMask1);			beachTimer.start();						// Throw the first Ad from the imported "SlogansB" class to display the typing of text.			_slogan2 = new SlogansB();			addChild(_slogan2);					}						private function beachMask1(myEvent:TimerEvent):void {			samaBoite = new Boite();			_masterMask.addChild(samaBoite);			samaBoite.y = _PosY1;			samaBoite.x = _PosX1;						_PosY1 += 101			myEvent.updateAfterEvent();			if(_PosY1 > 252) {				samaBoite.y = _PosY2;				_PosX1 += 101;				myEvent.updateAfterEvent();				if(_PosX1 > 151) {					samaBoite.x = _PosX2;					myEvent.updateAfterEvent();										_PosY2 -= 101;					if(_PosY2 < 50) {						samaBoite.y = _PosY3;												_PosX2 += 101;						myEvent.updateAfterEvent();						if(_PosX2 > 252) {							samaBoite.x = _PosX3;														_PosY3 += 101;							myEvent.updateAfterEvent();							if(_PosY3 > 252) {								samaBoite.y = _PosY4;																_PosX3 += 101;								myEvent.updateAfterEvent();								if(_PosX3 > 353) {									samaBoite.x = _PosX4;																		_PosY4 -= 101;									if(_PosY4 < 50) {										beachTimer.removeEventListener(TimerEvent.TIMER, beachMask1);																				// Get a break to allow the Typewriter										masterTimer.addEventListener(TimerEvent.TIMER, allowBreak1);										masterTimer.start();									}								}							}						}					}				}			}		}				private function allowBreak1(myEvent:TimerEvent):void {			// Remove Timer			masterTimer.removeEventListener(TimerEvent.TIMER, allowBreak1);						// Remove Mask to clear some Memory			removeChild(_masterMask);						// Store all the children of the Mask for a quick removal			var count:int = _masterMask.numChildren;			// Remove the mask with all its contents			for(var i:int = 0; i < count; i++) {				_masterMask.removeChildAt(0);			}						// Instantiate the Master Mask Again			_masterMask = new Sprite();			addChild(_masterMask);						// Instantiate the first image and mask it			_plage2 = new Plage2;			addChild(_plage2);			_plage2.mask = _masterMask;									// Remove the Ad from the stage			_slogan2.removeChildAt(0);			// Replace it with another one			_slogan3 = new SlogansC();			addChild(_slogan3);									beachTimer.addEventListener(TimerEvent.TIMER, beachMask3);			beachTimer.start();					}						private function beachMask3(myEvent:TimerEvent):void {			samaBoite = new Boite();			_masterMask.addChild(samaBoite);			samaBoite.x = _NewX1;			samaBoite.y = _NewY1;						_NewY1 += 101;			myEvent.updateAfterEvent();			if(_NewY1 > 252) {				samaBoite.y = _NewY2;								_NewX1 += 101;				if(_NewX1 > 151) {					samaBoite.x = _NewX2;										_NewY2 -= 101;					if(_NewY2 < 50) {						samaBoite.y = _NewY3;												_NewX2 += 101;						if(_NewX2 > 252) {							samaBoite.x = _NewX3;														_NewY3 += 101;							if(_NewY3 > 252) {								samaBoite.y = _NewY4;																_NewX3 += 101;								if(_NewX3 > 353) {									samaBoite.x = _NewX4;																		_NewY4 -= 101;									if(_NewY4 < 50) {										beachTimer.removeEventListener(TimerEvent.TIMER, beachMask3); 																				// Get a break to allow the Typewriter										masterTimer.addEventListener(TimerEvent.TIMER, allowBreak3);										masterTimer.start();									}																	}							}						}					}				}			}		}				private function allowBreak3(myEvent:TimerEvent):void {			// Remove Timer			masterTimer.removeEventListener(TimerEvent.TIMER, allowBreak3);						// Remove Mask to clear some Memory			removeChild(_masterMask);						// Remove second image			removeChild(_plage2);			// Instantiate the first image and mask it			_airline = new Airline;			_airline.alpha = 0;			addChild(_airline);						//Remove the Ad from the stage			_slogan3.removeChildAt(0);			//Replace it with another one			_slogan4 = new SlogansD();			addChild(_slogan4);						// Store all the children of the Mask for a quick removal			var count:int = _masterMask.numChildren;			// Remove the mask with all its contents			for(var i:int = 0; i < count; i++) {				_masterMask.removeChildAt(0);			}						airplaneTimer.start();			airplaneTimer.addEventListener(TimerEvent.TIMER, showPlane);		}				private function showPlane(myEvent:TimerEvent):void {			_airline.alpha += .1;			if(_airline.alpha >= 1) {				airplaneTimer.removeEventListener(TimerEvent.TIMER, showPlane);				// Make sure Typewriter has finished typing				endTimer.addEventListener(TimerEvent.TIMER, typingBreak);				endTimer.start();			}		}				private function typingBreak(myEvent:TimerEvent):void {			// Remove Background			airplaneTimer.addEventListener(TimerEvent.TIMER, removeBlueSky);			airplaneTimer.start();		}				private function removeBlueSky(myEvent:TimerEvent):void {			_background.alpha -= .1;			if(_background.alpha <= 0) {				airplaneTimer.removeEventListener(TimerEvent.TIMER, removeBlueSky);				_slogan4.removeChildAt(0);			}		}			}}