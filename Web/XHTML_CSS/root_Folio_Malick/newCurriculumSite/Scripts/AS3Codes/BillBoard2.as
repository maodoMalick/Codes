package Scripts.AS3Codes {		// ******** HOW IT WORKS ****************	// There is a series of classes BillBoard1,2,3 with different transitions	// that will be loaded in "XmlPictureLoader" class to mask some pictures loaded via an XML file.	// The "XmlPictureLoader" in turn will be loaded inside the class "NewMediaCenter08",	// which in turn will be loaded in the main FLA file.	import flash.display.MovieClip;	import flash.display.Sprite;	import flash.display.Shape;	import flash.utils.Timer;	import flash.events.TimerEvent;	public class BillBoard2 extends MovieClip {		// Create main container 		private var _billBoard:Sprite;		// Create mask object		private var Mask:Shape;		private var b_PosY:Number = 54;		private var b_PosX:Number = 94;		private var b_PosY1:Number = 27;		private var b_PosX1:Number = 0;		private var b_PosY2:Number = 0;		private var b_PosX2:Number = 94;		// TIMER		private var maskTimer:Timer = new Timer(50);		public function BillBoard2() {			// Instantiate main container			_billBoard = new Sprite;			addChild(_billBoard);			// this was for the purpose of testing in another movie.			//city_mc.mask = _billBoard;			maskTimer.addEventListener(TimerEvent.TIMER, showImage);			maskTimer.start();		}		private function showImage(myEvent:TimerEvent):void {			Mask = new Shape();			Mask.graphics.beginFill(0x000000, .5);			Mask.graphics.drawRoundRect(b_PosX, b_PosY, 46, 26, 10);			Mask.graphics.endFill();			_billBoard.addChild(Mask);			b_PosX -= 47;			if (b_PosX < 0) {				b_PosX = 0;				maskTimer.removeEventListener(TimerEvent.TIMER, showImage);				maskTimer.addEventListener(TimerEvent.TIMER, showImage1);				maskTimer.start();			}		}		private function showImage1(myEvent:TimerEvent):void {			Mask = new Shape();			Mask.graphics.beginFill(0x000000, .5);			Mask.graphics.drawRoundRect(b_PosX1, b_PosY1, 46, 26, 10);			Mask.graphics.endFill();			_billBoard.addChild(Mask);			b_PosX1 += 47;			if (b_PosX1 > 94) {				b_PosX1 = 94;				maskTimer.removeEventListener(TimerEvent.TIMER, showImage1);				maskTimer.addEventListener(TimerEvent.TIMER, showImage2);				maskTimer.start();			}		}		private function showImage2(myEvent:TimerEvent):void {			Mask = new Shape();			Mask.graphics.beginFill(0x000000, .5);			Mask.graphics.drawRoundRect(b_PosX2, b_PosY2, 46, 26, 10);			Mask.graphics.endFill();			_billBoard.addChild(Mask);			b_PosX2 -= 47;			if (b_PosX2 < 0) {				b_PosX2 = 0;				maskTimer.removeEventListener(TimerEvent.TIMER, showImage2);			}		}	}}