package Scripts.AS3Codes {		// ******** HOW IT WORKS ****************	// There is a series of classes BillBoard1,2,3 with different transitions	// that will be loaded in "XmlPictureLoader" class to mask some pictures loaded via an XML file.	// The "XmlPictureLoader" in turn will be loaded inside the class "NewMediaCenter08",	// which in turn will be loaded in the main FLA file.	import flash.display.MovieClip;	import flash.display.Shape;	import flash.display.Sprite;	import flash.utils.Timer;	import flash.events.TimerEvent;	public class BillBoard1 extends MovieClip {		// Create main container		private var billBoard:Sprite;		// Create Shape to be used as mask		private var Mask:Shape;		// Store the mask objects positions		private var a_PosY:Number=0;		private var a_PosX:Number=0;		private var a_PosY1:Number=54;		private var a_PosX1:Number=47;		private var a_PosY2:Number=54;		private var a_PosX2:Number=47;		private var a_PosY3:Number=0;		private var a_PosX3:Number=94;				// TIMER		private var maskTimer:Timer = new Timer(50);		public function BillBoard1() {			// Instantiate the main container			billBoard=new Sprite  ;			addChild(billBoard);						// this was for the purpose of testing in another movie.			//city_mc.mask = billBoard;									maskTimer.addEventListener(TimerEvent.TIMER,showImage);			maskTimer.start();		}						private function showImage(myEvent:TimerEvent):void {			Mask=new Shape  ;			Mask.graphics.beginFill(0x000000,.5);			Mask.graphics.drawRoundRect(a_PosX,a_PosY,46,26,10);			Mask.graphics.endFill();			billBoard.addChild(Mask);			a_PosY+= 27;			if (a_PosY > 54) {				a_PosY = a_PosY1;				maskTimer.removeEventListener(TimerEvent.TIMER,showImage);								// Add a new listener to the same Timer				maskTimer.addEventListener(TimerEvent.TIMER,showImage1);				maskTimer.start();			}		}						private function showImage1(myEvent:TimerEvent):void {					Mask = new Shape();			Mask.graphics.beginFill(0x000000, .5);			Mask.graphics.drawRoundRect(a_PosX2, a_PosY2, 46, 26, 10);			Mask.graphics.endFill();			billBoard.addChild(Mask);						a_PosY2 -= 27;			if (a_PosY2 < 0) {				a_PosY2 = 0;								maskTimer.removeEventListener(TimerEvent.TIMER, showImage1);								maskTimer.addEventListener(TimerEvent.TIMER,showImage2);				maskTimer.start();			}		}						private function showImage2(myEvent:TimerEvent):void {						Mask = new Shape();			Mask.graphics.beginFill(0x000000, .5);			Mask.graphics.drawRoundRect(a_PosX3, a_PosY3, 46, 26, 10);			Mask.graphics.endFill();			billBoard.addChild(Mask);						a_PosY3 += 27;			if (a_PosY3 > 54) {				a_PosY3 = 54;								maskTimer.removeEventListener(TimerEvent.TIMER,showImage2);				//trace(billBoard.numChildren);			}		}			}}